<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tabSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:gravity="center"
                android:text="About Tech Taste"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgCloseTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/close"
                android:tint="@color/white" />
        </LinearLayout>




    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TECH TASTE is a simple platform that connects you to skilled and qualified professional to solve all your tech related needs. Do you need a beautiful website to promote your business? An interactive app to run your business? Or you need technical help on a new programe or a new computer? TECH TASTE is here for you."/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:text="How it works :"/>

            <TextView
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="@string/post_order"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Here is where you post your issue.\nSelect a service you want : Website, App, Technical Support etc...\n\nEnter a bief discription of
your issue as the Title.\n\nThen enter a detailed description f your issue. \n\nOptional: Attach a picture to your issue\n
SUBMIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="@string/my_orders"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Here you can view all orders. All your orders are listed here. You can tap on any of them for more details and alsoeit them."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="Settings"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="You can view and edit your personal details like name, phone number, email and password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>